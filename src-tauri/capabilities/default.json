{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "fs:default",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$APPLocalData" },
        { "path": "$APPLocalData/**/*" }
      ]
    },
    "fs:allow-create",
    "fs:allow-appdata-write",
    "fs:allow-appdata-write-recursive"
  ]
}
